@using Models
@model IEnumerable<Book>
<table class="table table-bordered" id="bookTable">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                ISBN
            </th>
            <th>
                Author
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Count() != 0)
        {
@foreach (var book in Model)
{
<tr>
    <td>@book.Name</td>
    <td>@book.ISBN</td>
    <td>@book.Author</td>
    <td text-right">
        <a onclick="EditData(this, @book.Id)" class="btn btn-info text-white"> Edit</a>
        <a onclick="DeleteData(@book.Id)" class="btn btn-danger text-white">Delete</a>
    </td>
</tr>}}
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $("#bookTable").DataTable();
    });
</script>